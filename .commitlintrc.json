{
  "extends": ["@commitlint/config-conventional"],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "refactor",
        "perf",
        "style",
        "docs",
        "test",
        "build",
        "asset",
        "config",
        "chore",
        "ci",
        "merge",
        "release",
        "revert"
      ]
    ],
    "scope-case": [2, "always", ["camel-case", "kebab-case", "lower-case"]],
    "subject-case": [0],
    "header-max-length": [2, "always", 100]
  }
}
